@model List<Claim>
@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container-card w-full max-w-5xl mx-4 my-8 p-8">
    <h2 class="text-2xl font-bold mb-4">Submit New Claim</h2>

    <form asp-action="SubmitClaim" method="post" class="space-y-4">
        <div>
            <label>Contract ID</label>
            <input type="text" name="ContractId" class="form-input w-full" required />
        </div>
        <div>
            <label>Claim Title</label>
            <input type="text" name="Title" class="form-input w-full" required />
        </div>
        <div>
            <label>Amount ($)</label>
            <input type="number" name="Amount" class="form-input w-full" required />
        </div>
        <div class="flex justify-end">
            <button type="submit" class="btn-primary py-2 px-4 rounded-full">Submit Claim</button>
        </div>
    </form>

    <h2 class="text-2xl font-bold mt-8 mb-4">My Claim History</h2>
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
        <tr>
            <th>Claim ID</th>
            <th>Title</th>
            <th>Date Submitted</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Title</td>
                <td>@claim.DateSubmitted.ToShortDateString()</td>
                <td>@claim.Status</td>
            </tr>
        }
        </tbody>
    </table>
</div> 