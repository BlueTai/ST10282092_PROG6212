@model List<Claim>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-card w-full max-w-5xl mx-4 my-8 p-8">
    <h2 class="text-2xl font-bold mb-4">Claims Awaiting Approval</h2>
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
        <tr>
            <th>Claim ID</th>
            <th>Title</th>
            <th>Lecturer</th>
            <th>Date Submitted</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Title</td>
                <td>@claim.LecturerName</td>
                <td>@claim.DateSubmitted.ToShortDateString()</td>
                <td>
                    <a asp-action="Approve" asp-route-id="@claim.ClaimId" class="btn-primary py-1 px-3 rounded-full">Approve</a>
                    <a asp-action="Reject" asp-route-id="@claim.ClaimId" class="btn-secondary py-1 px-3 rounded-full">Reject</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 